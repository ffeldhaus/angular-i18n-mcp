{
  "name": "angular-i18n-mcp",
  "version": "1.0.5",
  "description": "MCP server for managing Angular i18n XLIFF 2.0 files",
  "license": "Apache-2.0",
  "main": "index.mjs",
  "type": "module",
  "bin": {
    "angular-i18n-mcp": "index.mjs"
  },
  "files": [
    "index.mjs",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ffeldhaus/angular-i18n-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node index.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/index.test.js",
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "deploy": "bash scripts/deploy.sh"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~21.0.5",
    "@angular/cli": "~21.0.5",
    "@angular/common": "~21.0.8",
    "@angular/compiler": "~21.0.8",
    "@angular/compiler-cli": "~21.0.8",
    "@angular/core": "~21.0.8",
    "@angular/localize": "~21.0.8",
    "@angular/platform-browser": "~21.0.8",
    "@biomejs/biome": "2.3.11",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "ng-extract-i18n-merge": "^3.2.1",
    "rxjs": "^7.8.1",
    "typescript": "^5.7.0",
    "zone.js": "~0.16.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@xmldom/xmldom": "^0.8.11"
  }
}
